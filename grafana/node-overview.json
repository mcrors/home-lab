{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    }
  ],
  "__requires": [
    { "type": "grafana", "id": "grafana", "name": "Grafana", "version": "10.0.0" },
    { "type": "panel", "id": "table", "name": "Table", "version": "" },
    { "type": "datasource", "id": "prometheus", "name": "Prometheus", "version": "2.0.0" }
  ],
  "annotations": { "list": [] },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "id": null,
  "iteration": 1,
  "liveNow": false,
  "panels": [
    {
      "type": "table",
      "title": "Nodes",
      "description": "Simple list of nodes. Shows 'nodename' when available; falls back to 'instance' (host:port) when node is down.",
      "gridPos": { "h": 12, "w": 24, "x": 0, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "refId": "A",
          "expr": "up{job=\"node_exporter\"}\n  * on(instance) group_left(nodename, release) node_uname_info\n  * on(instance) group_left(pretty_name, version_id, id) node_os_info",
          "legendFormat": "up",
          "interval": ""
        }
      ],
      "options": {
        "showHeader": true,
        "footer": { "show": false }
      },
      "transformations": [
        { "id": "labelsToFields", "options": { "mode": "columns" } },
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "Value": true,
              "job": true,
              "release": true,
              "pretty_name": true,
              "version_id": true,
              "id": true
            },
            "indexByName": {
              "instance": 1,
              "nodename": 0
            },
            "renameByName": {
              "nodename": "node",
              "instance": "fallback_instance"
            }
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": { "align": "left" }
        },
        "overrides": []
      },
      "pluginVersion": "10.0.0"
    }
  ],
  "refresh": "30s",
  "schemaVersion": 39,
  "style": "dark",
  "tags": ["node_exporter", "simple"],
  "templating": { "list": [] },
  "time": { "from": "now-15m", "to": "now" },
  "timepicker": {
    "hidden": false,
    "refresh_intervals": ["10s","30s","1m","5m","15m"]
  },
  "timezone": "",
  "title": "Nodes â€” Simple List",
  "uid": "nodes-simple-list",
  "version": 1,
  "weekStart": ""
}
